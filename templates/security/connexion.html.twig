{% extends 'base.html.twig' %}

{% block body %}
   <h1>Connexion</h1> 
   <form action="{{ path('security_login') }}" method="POST">
       <div class="form-group">
           <input type="text" placeholder="votre addresse email" required name="_username" class="form-control">
       </div>
       <div class="form-group">
           <input type="password" placeholder="votre mot de passe" required name="_password" class="form-control">
       </div>
       <div class="form-group">
           <button type="submit" class="btn btn-success">connexion</button>
       </div>
   </form>
{% endblock %}